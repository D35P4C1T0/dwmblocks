#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ó°‚‚ Battery module" "ó°‚‚: discharging
ğŸ›‘: not charging
ó°‘Œ: stagnant charge
ó°š¥: charging
ó±‹: charged
ó±ƒ: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# acpi alternative
# acpi | sed "s/Battery [0-9]: //;s/[Dd]ischarging, /ó°‚‚/;s/[Nn]ot charging, /ğŸ›‘/;s/[Cc]harging, /ó°š¥/;s/[Uu]nknown, /ó°‘Œ/;s/[Ff]ull, /âš¡/;s/ \(remaining\|until charged\)//"; exit

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity 2>/dev/null) || break
	status=$(sed "s/[Dd]ischarging/ó°‚‚/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ó°š¥/;s/[Uu]nknown/ó°‘Œ/;s/[Ff]ull/ó±‹/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -le 25 ] && [ "$status" = "ó°‚‚" ] && warn="ó±ƒ"

	printf "%s%s%s%% " "$status" "$warn" "$capacity"
	unset warn
done | sed 's/ *$//'
